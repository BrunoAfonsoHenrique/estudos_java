package alula07relacionamentoentreclasses.cliente;

public class Compra {
	
	private Cliente comprador;
	private int numeroCompra;
	private float preco;
	private String produto;
	
	public Compra(int numeroCompra, float preco, String produto) {
		this.setNumeroCompra(numeroCompra);
		this.setProduto(produto);
	}
	
	
	
	public Cliente getComprador() {
		return comprador;
	}



	public void setComprador(Cliente comprador) {
		this.comprador = comprador;
	}



	public int getNumeroCompra() {
		return numeroCompra;
	}



	public void setNumeroCompra(int numeroCompra) {
		this.numeroCompra = numeroCompra;
	}



	public float getPreco() {
		return preco;
	}



	public void setPreco(float preco) {
		this.preco = preco;
	}



	public String getProduto() {
		return produto;
	}



	public void setProduto(String produto) {
		this.produto = produto;
	}



	public void statusCompra() {
		System.out.println("Nome do comprador: " + this.comprador.getNomeCliente());
		System.out.println("Numero da compra: " + this.getNumeroCompra());
		System.out.println("Preço total da compra: R$" + this.getPreco());
		System.out.println("Produto comprado: " + this.getProduto());
	}
	
}
